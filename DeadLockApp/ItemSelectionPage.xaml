<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DeadLockApp.ViewModels"
             x:Class="DeadLockApp.ItemSelectionPage"
             BackgroundColor="#2b2923">
    <ContentPage.BindingContext>
        <vm:ItemSelectionViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <!-- Кнопки категорий -->
            <HorizontalStackLayout Spacing="10" Margin="10" Padding="5" HorizontalOptions="Center">
                <Button Text="Weapon" Command="{Binding ChangeCategoryCommand}" CommandParameter="Weapon" BackgroundColor="#e68a00" TextColor="White" />
                <Button Text="Vitality" Command="{Binding ChangeCategoryCommand}" CommandParameter="Vitality" BackgroundColor="#5a9e0f" TextColor="White" />
                <Button Text="Spirit" Command="{Binding ChangeCategoryCommand}" CommandParameter="Spirit" BackgroundColor="#a873ff" TextColor="White" />
            </HorizontalStackLayout>

            <!-- Список предметов -->
            <CollectionView ItemsSource="{Binding FilteredItems}" SelectionMode="Single" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="2" Margin="5" WidthRequest="100" HeightRequest="140" BackgroundColor="#3e3b36">
                            <VerticalStackLayout>
                                <Image Source="{Binding Image}" WidthRequest="80" HeightRequest="80" Aspect="AspectFill" />
                                <Label Text="{Binding Name}" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Image Source="souls.png" WidthRequest="12" HeightRequest="16" />
                                    <Label Text="{Binding Cost}" FontSize="14" TextColor="#47fdd3" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
