<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadLockApp.Items"
             >
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Предметы Deadlock" Style="{StaticResource HeaderStyle}" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Items}" Margin="20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="Black">
                            <VerticalStackLayout Style="{StaticResource ListItemStyle}" Padding="5" Spacing="10" Background="#282A36" WidthRequest="80">
                                <Image Source="{Binding ImageUrl}" Style="{StaticResource Img}" HorizontalOptions="Center" WidthRequest="70" HeightRequest="70"/>
                                <HorizontalStackLayout HorizontalOptions="Center" >
                                    <Label Text="{Binding Price}" Style="{StaticResource DescriptionStyle}" />
                                    <Image Source="souls.png"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>