<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeadLockApp.BuildsPage"
             BackgroundColor="#2b2923">

    <VerticalStackLayout Padding="10">
        <!-- Заголовок -->
        <Label x:Name="Pagetitle" 
               Style="{StaticResource HeaderStyle}"
               HorizontalOptions="Center" />

        <!-- Список билдов -->
        <CollectionView ItemsSource="{Binding Builds}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedBuild}"
                Margin="0,10,0,0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="#ada58c" CornerRadius="5" BackgroundColor="#3c3b37">
                        <VerticalStackLayout>
                            <!-- Название билда -->
                            <Label Text="{Binding Name}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#efdfc0" />

                            <!-- Имя автора -->
                            <Label Text="{Binding Author}"
                           FontSize="14"
                           TextColor="#b8a888"
                           Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <!-- Кнопка для создания нового билда -->
        <Button Text="Создать новый билд"
                Command="{Binding CreateBuildCommand}"
                BackgroundColor="#453f34"
                TextColor="#efdfc0"
                CornerRadius="5"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>
