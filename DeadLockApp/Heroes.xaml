<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DeadLockApp.Heroes">
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Герои Deadlock" Style="{StaticResource HeaderStyle}" HorizontalOptions="Center" />
            <CollectionView ItemsSource="{Binding Heroes}" WidthRequest="394" HorizontalOptions="Center" Margin="5">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="11" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="Black">
                            <VerticalStackLayout Style="{StaticResource ListItemStyle}" Padding="0" Spacing="10" Background="#282A36">
                                <Image Source="{Binding ImageUrl}" Style="{StaticResource Img}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>